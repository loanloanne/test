<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layout_gravity="center">
    <ImageView
        android:id="@+id/dl_imv_photo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/bf_comquemuoikho"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
       >
        <TextView
            android:id="@+id/dl_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cơm Quê Mười Khó"
            android:textSize="24dp" />
        <TextView
            android:id="@+id/dl_tv_ratingValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.8"
            android:textSize="24dp"
            android:layout_marginLeft="5dp"
            android:textColor="#C19E4B"/>
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_star_24"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/dl_tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27 Trần Quốc Thảo, P. 6, Q. 3, Tp.HCM"
        android:textSize="22dp"
        android:gravity="center"/>


</LinearLayout>